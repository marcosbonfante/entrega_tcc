@using SGM.WebApp.MVC.Extensions
@model IEnumerable<SGM.WebApp.MVC.Models.OrdemViewModel>

<div class="d-flex w-100">

    <div class="border-0" style="width: 20%">
        <div class="list-group list-group-flush">
            <a href="~/Ordems/Atendimento" class="list-group-item list-group-item-action bg-info text-white border">Em Atendimento</a>
            <a href="~/Ordems/Encerrada" class="list-group-item list-group-item-action bg-light border">Encerradas</a>
        </div>
    </div>

    <div id="page-content-wrapper" style="width: 80%">

        <vc:Summary></vc:Summary>

        <div class="container-fluid">
            <h1 class="mt-4">Ordens de Serviços - Atendimento</h1>
            <p>Ordens de serviço que precisam de solução</p>

            <div class="table-responsive">

                <table class="table">
                    <thead>
                        <tr class="table-warning">
                            <th scope="col">Data Solicitação</th>
                            <th scope="col">Departamento</th>
                            <th scope="col" class="w-50">Descrição</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ord in Model)
                        {
                            <tr>
                                <td>@ord.DataCadastro</td>
                                <td>@ord.CodDepartamento</td>
                                <td>@ord.Descricao</td>
                                <td>
                                    <form method="get" asp-controller="Ordems" asp-action="ResponderOrdem">
                                        <input type="hidden" id="OrdemId" name="OrdemId" value="@ord.Id" />
                                        <button type="submit" class="btn btn-secondary">Responder</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

        </div>


    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
