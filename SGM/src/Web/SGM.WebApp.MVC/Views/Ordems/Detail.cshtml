@{
    var ordems = (SGM.WebApp.MVC.Models.OrdemViewModel)ViewData["ordem"];
}

<div class="d-flex w-100">

    <div class="border-0" style="width: 20%">
        <div class="list-group list-group-flush">
            <a href="~/Ordems/Atendimento" class="list-group-item list-group-item-action bg-light border">Voltar</a>
        </div>
    </div>

    <div id="page-content-wrapper" style="width: 80%">

        <vc:Summary></vc:Summary>

        <div class="container-fluid">
            <h1 class="mt-4">Detalhes da Ordem</h1>
            @if (ordems != null)
            {
                <p>
                    Data da Solicitação: @ordems.DataCadastro<br />
                    Descrição : <span class="font-weight-bold font-italic">
                        @ordems.Descricao
                    </span><br />
                    Data Solução : @ordems.DataSolucao<br />
                    Status : <span class="font-weight-bold text-danger"> @ordems.Solucao</span><br />
                </p>
            }
        </div>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
