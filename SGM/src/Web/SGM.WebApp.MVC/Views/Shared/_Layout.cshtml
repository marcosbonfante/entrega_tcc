<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SGM Bom Destino</title>
    <link href="~/fonts/fontawesome/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Custom.min.css" />
</head>
<body>
    <header class="bg-header">
        <section class="header-main border-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <img alt="SGM - Bom Destino" class="logo" src="~/images/logo4.png"> <span class="font-weight-bold">SGM - Bom Destino</span>
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-12 order-2 order-lg-3">
                        <div class="d-flex justify-content-end">
                            <div>
                                <partial name="_LoginPartial" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </header>
    <div>
        <partial name="_PartialMenu" />
    </div>
    <div>
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container text-center">
            &copy; SGM Enterprise
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
